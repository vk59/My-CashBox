    <style name="textInstructions">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textInstructions</item>
    </style>

    <style name="textOnButtons">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textOnButtons</item>
